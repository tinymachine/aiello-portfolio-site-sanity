{
  "name": "aiello-portfolio-site",
  "version": "1.1.0",
  "private": true,
  "keywords": [],
  "description": "Portfolio website of Andrew Aiello built using Astro, Svelte, Cloudinary image hosting, Netlify deployment, and Sanity CMS.",
  "scripts": {
    "dev": "astro dev --host",
    "build": "astro build",
    "preview": "astro preview",
    "cms-preview": "astro dev --port 8080",
    "prepare": "husky && husky install"
  },
  "devDependencies": {
    "@astrojs/svelte": "^5.7.0",
    "accessible-astro-components": "^1.4.7",
    "astro": "^4.12.1",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^1.2.3",
    "eslint-plugin-svelte": "^2.42.0",
    "fast-average-color-node": "^2.4.0",
    "globals": "^15.8.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "marked": "^4.0.15",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.0",
    "prettier-plugin-svelte": "^3.2.6",
    "sass": "1.51.0",
    "svelte-preprocess": "^6.0.2"
  },
  "dependencies": {
    "@sanity/astro": "^3.1.6",
    "@sanity/client": "^6.22.4",
    "@sanity/visual-editing": "^2.7.0",
    "bigger-picture": "^1.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sanity": "^3.64.1",
    "svelte": "^4.0.0",
    "svelte-accessible-dialog": "^2.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --allow-empty"
    }
  },
  "lint-staged": {
    "*.{astro,js,svelte}": "eslint --cache --fix",
    "*.{astro,css,htm,html,js,md,scss,svelte}": "prettier --write"
  }
}
